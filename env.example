# Конфигурация VPN Server Manager - Clean

# Секретный ключ Flask (ОБЯЗАТЕЛЬНО измените в production!)
SECRET_KEY=your-secret-key-here-change-in-production

# Настройки интернационализации
BABEL_DEFAULT_LOCALE=ru
BABEL_SUPPORTED_LOCALES=ru,en,zh

# Настройки приложения
APP_VERSION=4.0.7
APP_NAME=VPNServerManager-Clean

# Директории данных
DATA_DIR=data
SERVERS_FILE=servers.json.enc
HINTS_FILE=hints.json

# Настройки PIN (ИЗМЕНИТЕ в production!)
DEFAULT_PIN=1234  # Тестовый PIN - ОБЯЗАТЕЛЬНО измените для продакшена!

# API URLs
IP_CHECK_API=https://ipinfo.io/{ip}/json
GENERAL_IP_TEST=https://browserleaks.com/ip
GENERAL_DNS_TEST=https://dnsleaktest.com/
IP2LOCATION_DEMO=https://www.ip2location.com/demo/{ip}

# Настройки загрузки файлов
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Настройки сервера (для web режима)
PORT=5000
HOST=127.0.0.1

# Настройки окружения
FLASK_ENV=development
FLASK_DEBUG=True
