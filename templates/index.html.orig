{% extends "layout.html" %}

{% block content %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Список серверов</h1>
            <div class="btn-group" role="group">
                <a href="https://browserleaks.com/ip" target="_blank" class="btn btn-sm btn-outline-info">Тест IP</a>
                <a href="https://dnsleaktest.com/" target="_blank" class="btn btn-sm btn-outline-info">Тест DNS</a>
            </div>
        </div>
        <a href="{{ url_for('add_server') }}" class="btn btn-primary">Добавить сервер</a>
    </div>

    {% if servers %}
    <div class="row">
        {% for server in servers %}
        <div class="col-md-6 col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header force-dark-text" style="background-color: {{ server.get('card_color', '#ffc107') }};">
                    <h5 class="card-title mb-0 d-flex align-items-center">
                        {% if server.icon_filename %}
                            <img src="{{ url_for('uploaded_file', filename=server.icon_filename) }}" alt="icon" class="me-2" style="width: 40px; height: 40px; object-fit: contain; border-radius: 4px;">
                        {% else %}
                            <i class="bi {{ server.os_icon }} me-2"></i>
                        {% endif %}
                        {{ server.name }}
                    </h5>
                    <div class="d-flex justify-content-between align-items-center">
                        <small>{{ server.provider }} - {{ server.ip_address }} {% if server.os %}({{ server.os }}){% endif %}</small>
                        {% if server.geolocation.city %}
                        <small><i class="bi bi-geo-alt-fill"></i> {{ server.geolocation.city }}, {{ server.geolocation.country }}</small>
                        {% endif %}
                    </div>
                </div>
                <div class="card-body p-3">
                    <div class="row text-center border-bottom pb-3 mb-2">
                        <div class="col">
                            <small class="text-muted">Стоимость</small>
                            <div><strong>{{ "%.2f"|format(server.payment_info.amount) }} {{ server.payment_info.currency }}</strong></div>
                            <small>{{ server.payment_info.get('payment_period', 'N/A') }}</small>
                        </div>
                        <div class="col">
                            <small class="text-muted">След. платёж</small>
                            <div><strong>{{ server.payment_info.formatted_date }}</strong></div>
                        </div>
                        <div class="col">
                            <small class="text-muted">Статус</small>
                            <div>
                                {% set status_color = {
                                    'Active': 'success', 
                                    'Inactive': 'secondary', 
                                    'Suspended': 'danger', 
                                    'Приостановлен': 'warning', 
                                    'Удален': 'danger'
                                }.get(server.status, 'secondary') %}
                                <span class="badge bg-{{ status_color }}">{{ server.status }}</span>
                            </div>
                        </div>
                    </div>

                    <div class="row text-center small border-bottom pb-2 mb-2">
                        <div class="col">
                            <span class="badge bg-{{ server.hosting_analysis.quality }}">{{ server.hosting_analysis.text }}</span>
                        </div>
                        <div class="col">
                             {% if server.checks.get('dns_ok') %}
                                <span class="badge bg-success">DNS OK</span>
                            {% else %}
                                <span class="badge bg-warning text-dark">DNS ?</span>
                            {% endif %}
                        </div>
                        <div class="col">
                             {% if server.checks.get('streaming_ok') %}
                                <span class="badge bg-success">Стриминг OK</span>
                            {% else %}
                                <span class="badge bg-warning text-dark">Стриминг ?</span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="d-grid mb-2">
                        <button class="btn btn-sm btn-outline-secondary" onclick="checkIpInfo('{{ server.ip_address }}')">
                            <i class="bi bi-search"></i> Проверить IP
                        </button>
                    </div>

                    <div class="accordion accordion-flush" id="accordion-{{ server.id }}">
                        <!-- Блок Кабинет хостера -->
                        {% if server.hoster_url or server.hoster_credentials.user_decrypted %}
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed py-2" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-hoster-{{ server.id }}">Кабинет хостера</button>
                            </h2>
                            <div id="collapse-hoster-{{ server.id }}" class="accordion-collapse collapse" data-bs-parent="#accordion-{{ server.id }}">
                                <div class="accordion-body py-2">
                                    
                                    {% if server.hoster_credentials.login_method != 'password' %}
                                        <p class="text-center my-1 small">Вход через <strong>{{ server.hoster_credentials.login_method|capitalize }}</strong></p>
                                    {% endif %}

                                    {% if server.hoster_credentials.user_decrypted %}
                                    <div class="d-flex justify-content-between align-items-center mt-2">
                                        <small>{{ 'Email' if server.hoster_credentials.login_method != 'password' else 'Логин' }}:</small>
                                        <div class="input-group input-group-sm w-auto">
                                            <span class="form-control form-control-sm text-truncate">{{ server.hoster_credentials.user_decrypted }}</span>
                                            <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard(this, '{{ server.hoster_credentials.user_decrypted }}')"><i class="bi bi-clipboard"></i></button>
                                        </div>
                                    </div>
                                    {% endif %}

                                    {% if server.hoster_credentials.login_method == 'password' and server.hoster_credentials.password_decrypted %}
                                    <div class="d-flex justify-content-between align-items-center mt-2">
                                        <small>Пароль:</small>
                                        <div class="input-group input-group-sm w-auto">
                                            <span class="form-control form-control-sm password-field" data-password="{{ server.hoster_credentials.password_decrypted }}">********</span>
                                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword(this)"><i class="bi bi-eye"></i></button>
                                            <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard(this, '{{ server.hoster_credentials.password_decrypted }}')"><i class="bi bi-clipboard"></i></button>
                                        </div>
                                    </div>
                                    {% endif %}

                                    {% if server.hoster_url %}
                                    <div class="d-grid mt-2">
                                        <a href="{{ server.hoster_url }}" target="_blank" class="btn btn-sm btn-outline-primary">Перейти в кабинет</a>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        {% endif %}

                        <!-- Блок SSH -->
                        <div class="accordion-item">
                             <h2 class="accordion-header">
                                <button class="accordion-button collapsed py-2" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-ssh-{{ server.id }}">SSH-доступ</button>
                            </h2>
                            <div id="collapse-ssh-{{ server.id }}" class="accordion-collapse collapse" data-bs-parent="#accordion-{{ server.id }}">
                                <div class="accordion-body py-2">
                                    <div class="text-center mb-2">
                                        <button class="btn btn-sm btn-outline-success w-100" onclick="copyToClipboard(this, 'ssh {{ server.ssh_credentials.user }}@{{ server.ip_address }} -p {{ server.ssh_credentials.get('port', 22) }}')">
                                            <i class="bi bi-terminal"></i> Копировать команду
                                        </button>
                                    </div>
                                    <h6 class="text-muted small">Пользователь</h6>
                                    {% if server.ssh_credentials.user %}
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small>Login:</small>
                                        <div class="input-group input-group-sm w-auto">
                                            <span class="form-control form-control-sm text-truncate">{{ server.ssh_credentials.user }}</span>
                                            <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard(this, '{{ server.ssh_credentials.user }}')"><i class="bi bi-clipboard"></i></button>
                                        </div>
                                    </div>
                                    {% endif %}
                                    {% if server.ssh_credentials.password_decrypted %}
                                    <div class="d-flex justify-content-between align-items-center mt-2">
                                        <small>Пароль:</small>
                                        <div class="input-group input-group-sm w-auto">
                                            <span class="form-control form-control-sm password-field" data-password="{{ server.ssh_credentials.password_decrypted }}">********</span>
                                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword(this)"><i class="bi bi-eye"></i></button>
                                            <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard(this, '{{ server.ssh_credentials.password_decrypted }}')"><i class="bi bi-clipboard"></i></button>
                                        </div>
                                    </div>
                                    {% endif %}
                                    
                                    <hr class="my-2">
                                    <h6 class="text-muted small">Root</h6>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small>Вход по SSH:</small>
                                        {% if server.ssh_credentials.get('root_login_allowed') %}
                                            <span class="badge bg-success">Разрешен</span>
                                        {% else %}
                                            <span class="badge bg-danger">Запрещен</span>
                                        {% endif %}
                                    </div>
                                     {% if server.ssh_credentials.root_password_decrypted %}
                                    <div class="d-flex justify-content-between align-items-center mt-2">
                                        <small>Пароль:</small>
                                        <div class="input-group input-group-sm w-auto">
                                            <span class="form-control form-control-sm password-field" data-password="{{ server.ssh_credentials.root_password_decrypted }}">********</span>
                                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword(this)"><i class="bi bi-eye"></i></button>
                                            <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard(this, '{{ server.ssh_credentials.root_password_decrypted }}')"><i class="bi bi-clipboard"></i></button>
                                        </div>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        
                        <!-- Блок Панель управления -->
                         {% if server.panel_url or server.panel_credentials.user_decrypted %}
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed py-2" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-panel-{{ server.id }}">Панель (3x-ui)</button>
                            </h2>
                            <div id="collapse-panel-{{ server.id }}" class="accordion-collapse collapse" data-bs-parent="#accordion-{{ server.id }}">
                                <div class="accordion-body py-2">
                                    {% if server.panel_credentials.user_decrypted %}
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small>Логин:</small>
                                        <div class="input-group input-group-sm w-auto">
                                            <span class="form-control form-control-sm text-truncate">{{ server.panel_credentials.user_decrypted }}</span>
                                            <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard(this, '{{ server.panel_credentials.user_decrypted }}')"><i class="bi bi-clipboard"></i></button>
                                        </div>
                                    </div>
                                    {% endif %}
                                    {% if server.panel_credentials.password_decrypted %}
                                    <div class="d-flex justify-content-between align-items-center mt-2">
                                        <small>Пароль:</small>
                                        <div class="input-group input-group-sm w-auto">
                                            <span class="form-control form-control-sm password-field" data-password="{{ server.panel_credentials.password_decrypted }}">********</span>
                                            <button class="btn btn-outline-secondary" type="button" onclick="togglePassword(this)"><i class="bi bi-eye"></i></button>
                                            <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard(this, '{{ server.panel_credentials.password_decrypted }}')"><i class="bi bi-clipboard"></i></button>
                                        </div>
                                    </div>
                                    {% endif %}
                                    {% if server.panel_url %}
                                     <div class="d-grid mt-2">
                                        <a href="{{ server.panel_url }}" target="_blank" class="btn btn-sm btn-outline-primary">Перейти в панель</a>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a href="{{ url_for('edit_server', server_id=server.id) }}" class="btn btn-sm btn-outline-secondary me-2">
                        <i class="bi bi-pencil-square"></i> Редактировать
                    </a>
                    <form action="{{ url_for('delete_server', server_id=server.id) }}" method="post" onsubmit="return confirm('Вы уверены, что хотите удалить этот сервер?');">
                        <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                    </form>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="alert alert-secondary text-center" role="alert">
        Серверов пока нет. <a href="{{ url_for('add_server') }}" class="alert-link">Добавьте первый!</a>
    </div>
    {% endif %}
</div>

<!-- Модальное окно для результатов проверки IP -->
<div class="modal fade" id="ipInfoModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ipInfoModalLabel">Информация об IP</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <pre id="ipInfoContent"></pre>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block scripts %}
<script>
    function checkIpInfo(ipAddress) {
        const modal = new bootstrap.Modal(document.getElementById('ipInfoModal'));
        const content = document.getElementById('ipInfoContent');
        content.textContent = 'Загрузка...';
        modal.show();

        fetch(`/check_ip/${ipAddress}`)
            .then(response => response.json())
            .then(data => {
                content.textContent = JSON.stringify(data, null, 2);
            })
            .catch(error => {
                content.textContent = 'Ошибка при загрузке данных: ' + error;
            });
    }

    function copyToClipboard(button, textToCopy) {
        navigator.clipboard.writeText(textToCopy).then(() => {
            const originalIcon = button.innerHTML;
            button.innerHTML = '<i class="bi bi-check-lg"></i>';
            setTimeout(() => {
                button.innerHTML = originalIcon;
            }, 1500);
        }).catch(err => {
            console.error('Ошибка копирования: ', err);
        });
    }

    function togglePassword(button) {
        const passwordSpan = button.previousElementSibling;
        const password = passwordSpan.getAttribute('data-password');
        const eyeIcon = button.querySelector('i');

        if (passwordSpan.textContent === '********') {
            passwordSpan.textContent = password;
            eyeIcon.classList.remove('bi-eye');
            eyeIcon.classList.add('bi-eye-slash');
        } else {
            passwordSpan.textContent = '********';
            eyeIcon.classList.remove('bi-eye-slash');
            eyeIcon.classList.add('bi-eye');
        }
    }
</script>
{% endblock %}
